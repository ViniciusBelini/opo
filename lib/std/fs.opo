pub <path: str> -> str?: read_file[
    fileExists(path) ? [
        some(readFile(path))
    ] : [
        none
    ]
]

pub <path: str, content: str> -> bol: write_file [
    writeFile(path, content)
]

pub <path: str> -> bol: exists [
    fileExists(path)
]

pub <path: str> -> bol: remove [
    removeFile(path)
]

pub <path: str> -> []str: list_dir [
    listDir(path)
]
