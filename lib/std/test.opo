pub <condition: bol, message: str> -> void: assert [
    !condition ? [
        "ASSERTION FAILED: " + message !!
        exit(1)
    ] : []
]

pub <a: int, b: int, message: str> -> void: assert_eq_int [
    a != b ? [
        "ASSERTION FAILED: " + message + " (expected " + str(b) + ", got " + str(a) + ")" !!
        exit(1)
    ] : []
]

pub <a: str, b: str, message: str> -> void: assert_eq_str [
    a != b ? [
        "ASSERTION FAILED: " + message + " (expected '" + b + "', got '" + a + "')" !!
        exit(1)
    ] : []
]
