<> -> void: play[
    # seed(time())

    int(rand(1.0, 100.0)) => secrete_number: int
    0 => attempts: int
    0 => guess: int

    println("Welcome to the Number Guessing Game!")
    println("I have picked a number between 1 and 100.")

    guess != secrete_number @ [
        try[
            print("Enter your guess: ")
            int(readLine()) => guess
            attempts + 1 => attempts

            guess < secrete_number ? [
                println("Too low! Try a higher number.")
            ] : guess > secrete_number ? [
                println("Too high! Try a lower number.")
            ] : guess == secrete_number ? [
                println("Congratulations! You guessed the number "+str(secrete_number)+" in "+str(attempts)+" attempts.")
            ]
        ]catch e[
            println("Invalid input. Please enter a valid whole number.")
        ]
    ]
]

<> -> void: main[
    play()
]
